# Database
DATABASE_URL=postgresql+asyncpg://genesis:genesis@db:5432/genesis
DATABASE_URL_SYNC=postgresql://genesis:genesis@db:5432/genesis
REDIS_URL=redis://redis:6379/0

# Claude API
ANTHROPIC_API_KEY=your_api_key_here
CLAUDE_MODEL=claude-opus-4-20250514

# Ollama
OLLAMA_HOST=http://host.docker.internal:11434
OLLAMA_MODEL=llama3.1:8b
OLLAMA_CONCURRENCY=4       # Max concurrent Ollama requests (match with Ollama server OLLAMA_NUM_PARALLEL)
OLLAMA_NUM_GPU=-1           # GPU layers (-1 = all on GPU)
OLLAMA_NUM_PREDICT=512      # Max tokens per LLM response

# Server
SECRET_KEY=change-this-to-a-random-secret-key
DEBUG=true
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# World Settings
INITIAL_AI_COUNT=0
MAX_AI_COUNT=1000
TICK_INTERVAL_MS=1000
AI_THINKING_INTERVAL_MS=3000

# Translation (optional)
DEEPL_API_KEY=your_deepl_key_here
